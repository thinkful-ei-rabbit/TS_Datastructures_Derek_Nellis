{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "rootDir": ".",
    "typeRoots": ["./types", "./node_modules/@types"],
    "target": "ESNext",
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules/**/*"]
}
